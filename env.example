# ===== CONFIGURAÇÕES DO SERVIDOR =====
PORT=3000
NODE_ENV=development

# ===== CONFIGURAÇÃO DO BANCO DE DADOS POSTGRESQL =====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=google_integration
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui

# ===== CONFIGURAÇÃO DO GOOGLE SERVICE ACCOUNT =====
ADMIN_EMAIL=admin@seudominio.com.br
GOOGLE_CLIENT_EMAIL=seu-service-account@seu-projeto.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSua chave privada aqui...\n-----END PRIVATE KEY-----"

# ===== URL DO WEBHOOK (PARA PRODUÇÃO, USE HTTPS) =====
WEBHOOK_URL=http://localhost:3000/api/webhook

# ===== CONFIGURAÇÕES DE SEGURANÇA =====
# Origens permitidas para CORS (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Token para acessar métricas (produção)
METRICS_TOKEN=seu_token_secreto_aqui

# ===== CONFIGURAÇÕES DE LOG =====
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# ===== CONFIGURAÇÕES DE PERFORMANCE =====
# Cache TTL para webhooks (milissegundos)
WEBHOOK_CACHE_TTL=300000

# Número máximo de tentativas de retry
MAX_RETRY_ATTEMPTS=3

# Tamanho do lote para sincronização
SYNC_BATCH_SIZE=100

# ===== CONFIGURAÇÕES DE AGENDAMENTO =====
# Habilitar/desabilitar agendamentos específicos
ENABLE_WEBHOOKRENEWAL_SCHEDULER=true
ENABLE_DATASYNC_SCHEDULER=true
ENABLE_LOGCLEANUP_SCHEDULER=true

# ===== CONFIGURAÇÕES DE MONITORAMENTO =====
# Intervalo para salvar métricas (milissegundos)
METRICS_SAVE_INTERVAL=300000

# ===== CONFIGURAÇÕES DE RATE LIMITING =====
# Limite de requisições por IP (15 minutos)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000 